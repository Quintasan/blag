<header class="masthead" style="background-image: url('https://itdata.sk/wp-content/uploads/2017/12/hurbag-1100x550.jpg')">
  <div class="overlay"></div>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-md-10 mx-auto">
        <div class="site-heading">
          <h1>Magda's Projects</h1>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-lg-8 col-md-10 mx-auto">
      <% @articles.each do |article| %>
      <div class="post-preview">
        <h2 class="post-title"><%= link_to article.title, article %></h2>
        <p><%= truncate(strip_tags(article.text), length: 120) { link_to "read more", article } %></p>
        <p class="post-meta">Posted by Magda on <%= article.created_at.strftime("%Y-%m-%d") %></p>
      <% end %>
      </div>
    </div>
  </div>
</div>
